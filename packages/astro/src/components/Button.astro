---
interface Props {
  label: string;
  href?: string;
}
const { label, href } = Astro.props as Props;
---
{href ? (
  <a href={href} class="knots-btn">
    {label}
  </a>
) : (
  <button class="knots-btn">{label}</button>
)}

<style>
.knots-btn {
  display: inline-flex;
  align-items: center;
  gap: 0.5rem;
  padding: 0.5rem 0.875rem;
  border-radius: 0.375rem;
  background: var(--color-primary, #2563eb);
  color: white;
}
</style>